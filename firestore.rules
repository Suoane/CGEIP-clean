rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    // Default: match /{document=**} {
    //   allow read, write: if false;
    // }

    // Users collection - users can read/write their own document
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
      allow delete: if request.auth.uid == userId;
    }

    // Students collection - students can read/write their own document
    match /students/{studentId} {
      allow read: if request.auth.uid == studentId;
      allow create: if request.auth.uid == studentId;
      allow update: if request.auth.uid == studentId || request.auth.uid == studentId;
      allow delete: if request.auth.uid == studentId;
      
      // Allow institutions to read student documents for applications
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'institute';
    }

    // Institutions collection - institutions can read/write their own document
    match /institutions/{institutionId} {
      allow read: if true; // Public read
      allow create: if request.auth.uid == institutionId;
      allow update: if request.auth.uid == institutionId;
      allow delete: if request.auth.uid == institutionId;
    }

    // Companies collection - companies can read/write their own document
    match /companies/{companyId} {
      allow read: if true; // Public read
      allow create: if request.auth.uid == companyId;
      allow update: if request.auth.uid == companyId;
      allow delete: if request.auth.uid == companyId;
    }

    // Faculties collection - allow read for all authenticated users
    match /faculties/{facultyId} {
      allow read: if request.auth != null;
      allow create: if (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' && request.resource.data.institutionId != null) ||
                       (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'institute' && request.resource.data.institutionId == request.auth.uid);
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || resource.data.institutionId == request.auth.uid;
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || resource.data.institutionId == request.auth.uid;
    }

    // Courses collection - allow read for all authenticated users
    match /courses/{courseId} {
      allow read: if request.auth != null;
      allow create: if (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' && request.resource.data.institutionId != null) ||
                       (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'institute' && request.resource.data.institutionId == request.auth.uid);
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || resource.data.institutionId == request.auth.uid;
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || resource.data.institutionId == request.auth.uid;
    }

    // Applications collection - allow read by student and institution
    match /applications/{applicationId} {
      allow read: if request.auth.uid == resource.data.studentId || 
                     request.auth.uid == resource.data.institutionId;
      allow create: if request.auth.uid == request.resource.data.studentId;
      allow update: if request.auth.uid == resource.data.institutionId || 
                       request.auth.uid == resource.data.studentId;
      allow delete: if request.auth.uid == resource.data.institutionId;
    }

    // Admissions collection - allow read by institution
    match /admissions/{admissionId} {
      allow read: if request.auth.uid == resource.data.institutionId;
      allow create: if request.auth.uid == request.resource.data.institutionId;
      allow update: if request.auth.uid == resource.data.institutionId;
    }

    // Jobs collection - allow read for all authenticated users
    match /jobs/{jobId} {
      allow read: if request.auth != null;
      allow create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'company';
      allow update: if request.auth.uid == resource.data.companyId;
      allow delete: if request.auth.uid == resource.data.companyId;
    }

    // Job applications collection
    match /jobApplications/{applicationId} {
      allow read: if request.auth.uid == resource.data.studentId || 
                     request.auth.uid == resource.data.companyId;
      allow create: if request.auth.uid == request.resource.data.studentId;
      allow update: if request.auth.uid == resource.data.companyId || 
                       request.auth.uid == resource.data.studentId;
    }

    // Notifications collection - users can read their own notifications
    match /notifications/{notificationId} {
      allow read: if request.auth.uid == resource.data.userId;
      allow update: if request.auth.uid == resource.data.userId;
    }
  }
}
