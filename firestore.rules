rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection - users can read/write their own document, admins can read all
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isAdmin();
      allow delete: if isAdmin();
    }

    // Students collection - students can read/write their own, admins and institutes can read
    match /students/{studentId} {
      allow read: if request.auth.uid == studentId || isAdmin() || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'institute';
      allow create: if request.auth.uid == studentId;
      allow update: if request.auth.uid == studentId || isAdmin();
      allow delete: if isAdmin();
    }

    // Institutions collection - public read, institutions own write, admins manage
    match /institutions/{institutionId} {
      allow read: if true;
      allow create: if request.auth.uid == institutionId || isAdmin();
      allow update: if request.auth.uid == institutionId || isAdmin();
      allow delete: if isAdmin();
    }

    // Companies collection - public read, companies own write, admins manage
    match /companies/{companyId} {
      allow read: if true;
      allow create: if request.auth.uid == companyId || isAdmin();
      allow update: if request.auth.uid == companyId || isAdmin();
      allow delete: if isAdmin();
    }

    // Faculties collection - authenticated read, role-based write
    match /faculties/{facultyId} {
      allow read: if request.auth != null;
      allow create: if isAdmin() || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'institute' && request.resource.data.institutionId == request.auth.uid);
      allow update: if isAdmin() || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'institute' && resource.data.institutionId == request.auth.uid);
      allow delete: if isAdmin();
    }

    // Courses collection - authenticated read, role-based write
    match /courses/{courseId} {
      allow read: if request.auth != null;
      allow create: if isAdmin() || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'institute' && request.resource.data.institutionId == request.auth.uid);
      allow update: if isAdmin() || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'institute' && resource.data.institutionId == request.auth.uid);
      allow delete: if isAdmin();
    }

    // Applications collection - involved parties and admins can read
    match /applications/{applicationId} {
      allow read: if request.auth.uid == resource.data.studentId || 
                     request.auth.uid == resource.data.institutionId || isAdmin();
      allow create: if request.auth.uid == request.resource.data.studentId;
      allow update: if request.auth.uid == resource.data.institutionId || 
                       request.auth.uid == resource.data.studentId || isAdmin();
      allow delete: if isAdmin();
    }

    // Admissions collection - institution, student, and admins can read
    match /admissions/{admissionId} {
      allow read: if request.auth.uid == resource.data.institutionId || 
                     request.auth.uid == resource.data.studentId || isAdmin();
      allow create: if request.auth.uid == request.resource.data.institutionId || isAdmin();
      allow update: if request.auth.uid == resource.data.institutionId || isAdmin();
      allow delete: if isAdmin();
    }

    // Jobs collection - authenticated read, role-based write
    match /jobs/{jobId} {
      allow read: if request.auth != null;
      allow create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'company' || isAdmin();
      allow update: if request.auth.uid == resource.data.companyId || isAdmin();
      allow delete: if request.auth.uid == resource.data.companyId || isAdmin();
    }

    // Job applications collection - involved parties and admins can read
    match /jobApplications/{applicationId} {
      allow read: if request.auth.uid == resource.data.studentId || 
                     request.auth.uid == resource.data.companyId || isAdmin();
      allow create: if request.auth.uid == request.resource.data.studentId;
      allow update: if request.auth.uid == resource.data.companyId || 
                       request.auth.uid == resource.data.studentId || isAdmin();
      allow delete: if isAdmin();
    }

    // Notifications collection - users and admins can read their notifications
    match /notifications/{notificationId} {
      allow read: if request.auth.uid == resource.data.userId || isAdmin();
      allow update: if request.auth.uid == resource.data.userId || isAdmin();
      allow delete: if isAdmin();
    }
  }
}
